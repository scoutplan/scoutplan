# Kamal secrets configuration
# Copy this file to .kamal/secrets and fill in the values
# NEVER commit .kamal/secrets to version control

# Deployment hosts
KAMAL_WEB_HOST=<droplet-ip>
KAMAL_WORKER_HOST=<droplet-ip>

# DigitalOcean Container Registry
KAMAL_REGISTRY_USERNAME=<your-do-registry-username>
KAMAL_REGISTRY_PASSWORD=<your-do-api-token>

# Database (from existing K8s secrets)
DATABASE_HOST=<your-postgres-host>
DATABASE_NAME=scoutplan_production
DATABASE_USER=<your-db-user>
DATABASE_PASSWORD=<your-db-password>

# Core Rails secrets
RAILS_MASTER_KEY=<from-config/credentials.yml.enc>
SECRET_KEY_BASE=<your-secret-key-base>

# Phase 1: Redis URL (remove in Phase 3 when switching to Solid Queue)
REDIS_URL=<your-redis-url>

# API tokens
POSTMARK_API_TOKEN=<your-postmark-token>
STRIPE_SECRET_KEY=<your-stripe-secret-key>
MAPBOX_TOKEN=<your-mapbox-token>
OPENWEATHER_API_KEY=<your-openweather-key>
OPENAI_ACCESS_TOKEN=<your-openai-token>

# DigitalOcean Spaces (storage)
DO_STORAGE_KEY_ID=<your-do-spaces-key>
DO_STORAGE_SECRET=<your-do-spaces-secret>

# Google OAuth
GOOGLE_OAUTH_CLIENT_ID=<your-google-client-id>
GOOGLE_OAUTH_CLIENT_SECRET=<your-google-client-secret>

# Twilio SMS
TWILIO_SID=<your-twilio-sid>
TWILIO_TOKEN=<your-twilio-token>
TWILIO_NUMBER=<your-twilio-number>
SMS_BASIC_USERNAME=<your-sms-username>
SMS_BASIC_PASSWORD=<your-sms-password>

# Email
MAILGUN_INGRESS_SIGNING_KEY=<your-mailgun-key>
SMTP_PASSWORD=<your-smtp-password>

# Monitoring
SKYLIGHT_AUTHENTICATION=<your-skylight-token>
SCOUT_KEY=<your-scout-key>
LOGTAIL_TOKEN=<your-logtail-token>

# Analytics
MIXPANEL_TOKEN=<your-mixpanel-token>

# Blazer (internal analytics)
BLAZER_DATABASE_URL=<your-blazer-db-url>
